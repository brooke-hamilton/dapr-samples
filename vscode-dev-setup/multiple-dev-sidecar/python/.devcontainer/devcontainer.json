// For format details, see https://aka.ms/vscode-remote/devcontainer.json or this file's README at:
{
	"name": "python dev container",
	
	// See the docker compose file for how this container is defined, built, and run.
	"dockerComposeFile": [
		"../../docker-compose.yml"
	],

	// The name of the docker compose service (container) to connect to. 
	// Corresponds to a specific container in the docker-compose.yml file.
	"service": "python-dev",

	// Prevents the container from shutting down after vs code exits
	"shutdownAction": "none",

	// VS Code exensions to add to the container when VS Code attaches
	"extensions": [ "ms-azuretools.vscode-dapr", 
		"visualstudioexptteam.vscodeintellicode", 
		"eg2.vscode-npm-script",
		"ms-python.python"],
	
	// Open the sub-folder with the source code, normally a volume mount for the local git repo, defined in the docker-compose.yml file.
	// This must be a valid path on the container.
	"workspaceFolder": "/workspace/dapr-samples/vscode-dev-setup/multiple-dev-sidecar/python"
}