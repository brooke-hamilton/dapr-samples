{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "compounds": [
        {
            "name": "Debug All Apps",
            "configurations": ["Node App", "Python App"]
        }
    ],
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Node App",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "./node/app.js",
            "console": "integratedTerminal",
            "preLaunchTask": "nodeapp-daprd-debug",
            "postDebugTask": "nodeapp-daprd-down"
        },
        {
            "name": "Python App",
            "type": "python",
            "pythonPath": "${command:python.interpreterPath}",
            "request": "launch",
            "program": "./python/app.py",
            "console": "integratedTerminal",
            "preLaunchTask": "pythonapp-daprd-debug",
            "postDebugTask": "pythonapp-daprd-down"
        }
    ]
}